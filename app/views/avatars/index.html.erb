
<div class="row-fluid">
	<div class="span4">
		<%= render 'dashboards/profile_box' %>
	</div>

	<div class="span8">
		<div class="box">
			<div class="row-fluid">
				<div class="span12">
					<p class="lead"> Your Avatars <%= link_to "Add Avatar", new_user_avatar_path(current_user), :class => "btn btn-primary" %> </p>
					<hr />
				</div>
			</div>

			<div class="row-fluid">
				<div class="span12">
					
					<% if !@avatars.empty? %>
						<div> <%= pluralize(@avatars.count, "avatar") %> available. </div>
						<%= render @avatars %>
					<% else %>
						No avatars yet.
					<% end %>

				</div>
			</div>
		</div>
	</div>
</div>