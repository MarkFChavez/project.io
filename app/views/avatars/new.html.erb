
<div class="row-fluid">
	<div class="span4">
		<%= render 'projects/profile_box' %>
	</div>

	<div class="span8">
		<div class="box">
			<div class="row-fluid">
				<div class="span12">
					<p class="lead"> Upload an Avatar </p>
					<hr />
				</div>
			</div>

			<div class="row-fluid">
				<div class="span12">
					
					<%= form_for [current_user, @avatar], :multipart_form => true do |f| %>

						<% if !@avatar.errors.empty? %>
							<div class="alert alert-error">
								<% @avatar.errors.full_messages.each do |err| %>
									<div> <%= err %> </div>
								<% end %>
							</div>
						<% end %>

						<%= f.label "Choose an Avatar:" %>
						<%= f.file_field :photo %>

						<br />
						<br />

						<%= f.submit "Upload", :class => "btn btn-primary" %>
					<% end %>

				</div>
			</div>
		</div>
	</div>
</div>