

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-signin' }) do |f| %>
  
  <h2 class="form-signin-heading">Sign up</h2>

  <% if !devise_error_messages!.empty? %>
    <div class="alert alert-error">
      <%= devise_error_messages! %>
    </div>
  <% end %>

  <%= f.email_field :email, :autofocus => true, :class => 'input-block-level', :placeholder => 'Email address' %>
  <%= f.text_field :first_name, :class => 'input-block-level', :placeholder => 'First name' %>
  <%= f.text_field :last_name, :class => 'input-block-level', :placeholder => 'Last name' %>
  <%= f.password_field :password, :class => 'input-block-level', :placeholder => 'Password' %>
  <%= f.password_field :password_confirmation, :class => 'input-block-level', :placeholder => 'Confirm Password' %>

  <div><%= f.submit "Sign up", :class => 'btn btn-primary' %></div>
  <br />
  <%= render "devise/shared/links" %>
<% end %>
